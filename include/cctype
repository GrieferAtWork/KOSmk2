#ifndef _CXX_CCTYPE
#define _CXX_CCTYPE 1
#ifdef __CXX_SYSTEM_HEADER
#include "ctype.h"
#else /* __CXX_SYSTEM_HEADER */
#define __CXX_SYSTEM_HEADER 1
#include "ctype.h"
#undef __CXX_SYSTEM_HEADER
#endif /* !__CXX_SYSTEM_HEADER */

/* Delete these macros for compatibility with libstdc++ */
#undef isalnum
#undef isalpha
#undef iscntrl
#undef isdigit
#undef islower
#undef isgraph
#undef isprint
#undef ispunct
#undef isspace
#undef isupper
#undef isxdigit
#ifdef __USE_ISOC99
#undef isblank
#endif /* __USE_ISOC99 */

#endif /* !_CXX_CTYPE */
